<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="524dp"
        android:layout_height="221dp"
        android:text="Bla Bla"
        android:textSize="25sp"
        android:typeface="serif"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="154dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_acc"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="#6aa05c"
        android:text="Accept"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_deny"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:backgroundTint="#e4453a"
        android:text="Deny"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_acc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_acc"
        app:layout_constraintTop_toBottomOf="@+id/button_acc"
        app:layout_constraintVertical_bias="0.098"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>